<h1>Booking Form</h1>

<%= form_for @cart do |f| %>

<%= render partial: "./errors", locals: { object: @cart } %>

<%= f.radio_button :frequency, :week %>
<%= f.label :frequency_week, 'Weekly' %>

<%= f.radio_button :frequency, :fortnight %>
<%= f.label :frequency_fortnight, 'Fortnight' %>

<%= f.radio_button :frequency, :once %>
<%= f.label :frequency_once, 'Once' %>

<%= f.label :date %>
<%= f.date_select :date %>

<%= f.label :time %>
<%= f.time_select :time %>

<%= f.label :duration %>
<%= f.select :duration, ((2..10).step(0.5).to_a.map { |s| ["#{s} hours", s] }) %>

<%= f.check_box :ironing %>
<%= f.label :ironing %>

<%= f.check_box :pets %>
<%= f.label :pets %>

<%= f.submit "Reserve" %>

<% end %>
