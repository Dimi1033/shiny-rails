<div class="panel panel-default">
    <div class="panel-heading separator">
        <div class="panel-title">
            <%= t('summary.booking_summary') %>
        </div>
    </div>
    <div class="panel-body">

        <ul class="booking_details list-unstyled">
            <li class="booking_details_item">
                <span class="booking_detail_name detail">
                    <%= t('summary.date') %>
                </span>
                <span class="pull-right value cart_date_summary">
                    <!-- Javascript -->
                </span>
            </li>

            <li class="booking_details_item">
                <span class="booking_detail_name detail">
                    <%= t('summary.time') %>
                </span>
                <span class="pull-right value cart_time_summary">
                    <!-- Javascript -->
                </span>
            </li>

            <li class="booking_details_item">
                <span class="booking_detail_name detail">
                    <%= t('summary.frequency') %>
                </span>
                <span class="pull-right value cart_frequency_summary">
                    <!-- Javascript -->
                </span>
            </li>

            <li class="booking_details_item">
                <span class="booking_detail_name detail">
                    <%= t('summary.duration') %>
                </span>
                <span class="pull-right value cart_duration_summary">
                    <!-- Javascript -->
                </span>
            </li>
        </ul>

        <ul class="booking_details_cost list-unstyled">

            <li class="booking_details_item hint-text">
                <span class="booking_detail_name detail">
                    <%= t('summary.cost_of_clean') %>
                </span>
                <span class="pull-right value cart_cost_summary">
                    <!-- Javascript -->
                </span>
            </li>

            <li class="booking_details_item discount_summary hint-text">
                <span class="booking_detail_name detail">
                    <%= t('summary.discount') %>
                </span>
                <span class="pull-right value cart_discount_summary">
                    <!-- Javascript -->
                </span>
            </li>

            <li class="booking_details_item cost_total_summary">
              <h4 class="text-success">
                <span class="booking_detail_name detail">
                    <%= t('summary.total_cost') %>
                </span>
                <span class="pull-right value cart_cost_total">
                    <!-- Javascript -->
                </span>
              </h4>
            </li>

        </ul>
    </div>
</div>

<ul class="list-unstyled">
  <li class="list-cc-item"><i class="fa fa-3x fa-cc-mastercard"></i></li>
  <li class="list-cc-item"><i class="fa fa-3x fa-cc-visa"></i></li>
</ul>
